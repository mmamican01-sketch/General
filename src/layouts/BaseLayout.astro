---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "AL Farhan General Trading Co",
  lang = "en",
  dir = undefined,
  locale = "en",
  currentPath = "",
  description = "AL Farhan General Trading Co â€” institutional commodity trading.",
} = Astro.props;

const resolvedDir = dir ?? (lang === "ar" ? "rtl" : "ltr");
const baseUrl = Astro.site?.origin ?? "https://general-gjpn.vercel.app";
const canonicalPath = currentPath ? `/${locale}/${currentPath}` : `/${locale}`;
const canonicalUrl = `${baseUrl}${canonicalPath}`;
const enPath = currentPath ? `/en/${currentPath}` : "/en";
const arPath = currentPath ? `/ar/${currentPath}` : "/ar";
---

<!doctype html>
<html lang={lang} dir={resolvedDir}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="AL Farhan General Trading Co" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="alternate" hreflang="en" href={`${baseUrl}${enPath}`} />
    <link rel="alternate" hreflang="ar" href={`${baseUrl}${arPath}`} />
    <link rel="alternate" hreflang="x-default" href={`${baseUrl}${enPath}`} />
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <Header locale={locale} currentPath={currentPath} />
    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>

